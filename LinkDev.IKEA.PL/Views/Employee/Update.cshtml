@model EmployeeUpdateVM
@{
    ViewData["Title"] = "Update";
}

<h1 class="mb-3 text-center">Update Employee</h1>
<div class="w-100 mb-5"></div>

<div class="container">
   <form asp-action="Update" >
       <div asp-validation-summary="ModelOnly"></div>
       <div class="row justify-content-center ">

           <div class="form-floating col-md-8 mb-3">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <label asp-for="Name" class="formInput ms-2"></label>
            </div>

            <div class="form-floating col-md-8 mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <label asp-for="Email" class="formInput ms-2"></label>
             </div>

             <div class="form-floating col-md-8 mb-3">
                <input asp-for="Address" class="form-control" placeholder="Address">
                <label asp-for="Address" class="formInput ms-2"></label>
             </div>

             <div class="form-floating col-md-8 mb-3">
                    <input asp-for="Age" class="form-control" placeholder="Age">
                    <label asp-for="Age" class="formInput ms-2"></label>
            </div>

            <div class="form-floating col-md-8 mb-3">
                <input asp-for="Salary" class="form-control" placeholder="Salary">
                <label asp-for="Salary" class="formInput ms-2"></label>
            </div>

            <div class="form-floating col-md-8 mb-3">
                <input asp-for="Phone" class="form-control" placeholder="Phone">
                <label asp-for="Phone" class="formInput ms-2"></label>
           </div>

           <div class="form-floating col-md-8 mb-3">
                 <input type="date" asp-for="HiringDate" class="form-control" placeholder="Hiring Date">
                 <label asp-for="HiringDate" class="formInput ms-2"></label>
           </div>

           <div class="form-check col-md-8 mb-3 ms-3 align-items-center">
                 <input asp-for="IsActive" class="form-check-input" type="checkbox" >
                 <label asp-for="IsActive" class="form-check-label"></label>
           </div>

        
           <div class="w-100"></div> 
           <div class="col-md-8 text-end">
               <button type="submit" class="btn btn-success text-light ms-auto">Save</button>
               <a asp-action="Index" class="btn btn-dark text-light">Cancel</a>
           </div>
       </div>
   </form>
</div>



@section Scripts {
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}


