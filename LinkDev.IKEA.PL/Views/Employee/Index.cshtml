@model IEnumerable<EmployeeGeneralDTO>

@{
    ViewData["Title"] = "Employees";

    // Compiler Enforce type safety
    string? viewDataMessage = ViewData["Message"] as string;
    // Compiler will skip type checking and will not enforce type safety
    string? tempDataMessage = ViewBag.Message ;
}

<div class="alert alert-primary">
    <p> @ViewData["Message"] </p>
</div>
<div class="alert alert-primary">
    <p> @ViewData["Message"] </p>
</div>


<div class="container">
    <h1 class="text-center">Employees Page</h1>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Employee" asp-action="Create" type="button" class="btn btn-outline-dark mt-3">
            <i class="fa-solid fa-plus"></i>
            Create New Employee</a>
    </div>

    @if (Model.Count() > 0)
    {
            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e  => e.Name)</th>
                        <th>@Html.DisplayNameFor(e => e.Email)</th>
                        <th>@Html.DisplayNameFor(e => e.Age)</th>
                        <th>@Html.DisplayNameFor(e => e.Salary)</th>
                        <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                        <th>@Html.DisplayNameFor(e => e.Gender)</th>
                        <th>@Html.DisplayNameFor(e => e.EmployeeType)</th>


                      
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var employee in Model)
                {
                        <tr>
                            <td>@Html.DisplayFor(X => employee.Name)</td>
                            <td>@Html.DisplayFor(X => employee.Email)</td>
                            <td>@Html.DisplayFor(X => employee.Age)</td>
                            <td>@Html.DisplayFor(X => employee.Salary)</td>
                            <td>@Html.DisplayFor(X => employee.IsActive)</td>
                            <td>@Html.DisplayFor(X => employee.Gender)</td>
                            <td>@Html.DisplayFor(X => employee.EmployeeType)</td>



                            
                            <td>
                                <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-dark">
                                        <i class="fa-solid fa-eye me-2"></i> Details
                                    </a>
                            </td>
                            <td>
                                    <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-dark">
                                    <i class="fa-solid fa-pen-to-square me-2"></i>Update
                                </a>
                            </td>
                            <td>
                                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                          <i class="fa-solid fa-trash me-2"></i>Delete
                                        </button>
                            </td>
                        </tr>

                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Department</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this employee?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-route-id="@employee.Id" asp-action="Delete">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
                </tbody>
            </table>
    }
    else
    {
            <div class="alert alert-warning">
                <h3>There is No Employees :(</h3>
            </div>
    }
</div>
