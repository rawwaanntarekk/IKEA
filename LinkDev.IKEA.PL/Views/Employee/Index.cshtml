@model IEnumerable<EmployeeGeneralDTO>

@{
    ViewData["Title"] = "Employees";
}
<div class="container">
    <h1 class="text-center">Departments Page</h1>
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Employee" asp-action="Create" type="button" class="btn btn-outline-dark mt-3">
            <i class="fa-solid fa-plus"></i>
            Create New Employee</a>
    </div>


    <form asp-action="Index" method="Get">
        <div class="m-auto row col-md-8 justify-content-center align-items-center">
            <div class="col-md-8">
                <input type="text" id="searchInput" name="search" placeholder="Search..." class="form-control my-3" /> 
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-dark">Search</button>
            </div>

        </div>
    </form>

    @if (Model.Count() > 0)
    {
            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e  => e.Name)</th>
                        <th>@Html.DisplayNameFor(e => e.Email)</th>
                        <th>@Html.DisplayNameFor(e => e.Age)</th>
                        <th>@Html.DisplayNameFor(e => e.Salary)</th>
                        <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                        <th>@Html.DisplayNameFor(e => e.Gender)</th>
                        <th>@Html.DisplayNameFor(e => e.EmployeeType)</th>


                      
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>

                    <partial name="Partials/EmployeeListPartial" model="@Model" />
              
                
                </tbody>
            </table>
    }
    else
    {
            <div class="alert alert-warning">
                <h3>There is No Employees :(</h3>
            </div>
    }
</div>

<script>
    var searchInput = $("#searchInput");
    var table = $("table");
    searchInput.on("keyup" , function(event){
        var searchValue = searchInput.val();
        $.ajax({
            url: "/Employee/Search",
            type: "GET",
            data: { search: searchValue },
            success: function (response) {
                table.html(response);
            },
            error: function (error) {
                console.log(error);
            }
        });

    })
</script>

