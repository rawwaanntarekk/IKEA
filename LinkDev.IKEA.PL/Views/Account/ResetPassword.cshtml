  @model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<!-- main -->
	<div class="main-w3layouts wrapper">
		<h1> Reset Password </h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="ResetPassword" method="post">
					<div asp-validation-summary="ModelOnly"></div>
					<input asp-for="Email" type="hidden">
					<input asp-for="Token" type="hidden">

					<input class="text" type="password" asp-for="Password"  placeholder="Password" required="">
					<input class="text" type="password" asp-for="ConfirmPassword"  placeholder="ConfirmPassword" required="">

					<span asp-validation-for="Password"></span>
					<input type="submit" value="Reset Password">
				</form>
			</div>
		</div>

