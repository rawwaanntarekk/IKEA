@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

	 <!-- main -->
	<div class="main-w3layouts wrapper">
		<h1>Creative SignUp Form</h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="SignUp" method="post">
					<div asp-validation-summary="ModelOnly"></div>
					<input class="text " asp-for="FirstName" placeholder="First Name" required="">
					<input class="text " asp-for="LastName" placeholder="Last Name" required="">
					<input class="text" asp-for="UserName" placeholder="Username" required="">
					<input class="text email" asp-for="Email" placeholder="Email" required="">
					<input class="text" type="password" asp-for="Password" name="password" placeholder="Password" required="">
					<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
					<div class="wthree-text">
						<label class="anim">

							<div class="d-flex align-items-center">
                                <input type="checkbox" asp-for="isAgree" class="checkbox" required>
                                <span class="ms-2">Agee to terms and conditions</span>
                            </div>
							
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p>Already have an account? <a asp-action="SignIn"> Login Now!</a></p>
			</div>
		</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}
