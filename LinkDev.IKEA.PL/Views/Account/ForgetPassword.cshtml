
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<form asp-action="ForgetPassword">
   <div class="main-w3layouts wrapper">
		<h1>ForgetPassword</h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="SignIn" method="post">
					<div asp-validation-summary="ModelOnly"></div>
					<input class="text email" asp-for="Email" placeholder="Email" required="">
					<input type="submit" value="Send recovery link">
				</form>
			
			</div>
		</div>
</form>

                 