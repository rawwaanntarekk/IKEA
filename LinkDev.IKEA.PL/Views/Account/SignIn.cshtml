@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

 <!-- main -->
	<div class="main-w3layouts wrapper">
		<h1> SignIn </h1>
		<div class="main-agileinfo">
			<div class="agileits-top">
				<form asp-action="SignIn" method="post">
					<div asp-validation-summary="ModelOnly"></div>
					<input class="text email" asp-for="Email" placeholder="Email" required="">
					<span asp-validation-for="Email"></span>
					<input class="text" type="password" asp-for="Password" name="password" placeholder="Password" required="">
					<span asp-validation-for="Password"></span>
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
							<span>Remeber Me</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNIN">
				</form>
				<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
				<p>Forgot Password? <a asp-action="ForgetPassword"> Click Here!</a></p>
			</div>
		</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}
